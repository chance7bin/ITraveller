
.topic-list {
	padding: 20rpx;
	border-bottom: 20rpx solid #f7f6f6;
}
.user-info {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.user-info-img {}
.user-info-img image {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
.user-info-detail {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin-left: 20rpx;
}
.user-info-name {
	font-size: 30rpx;
}
.user-info-date {
	font-size: 26rpx;
	color: #686868;
}
.topic-type {
	margin-top: 10rpx;
	color: #007AFF;
}
.topic-text {
	margin-top: 10rpx;
	font-weight: bold;
	font-size: 36rpx;
}
.topic-img {
	margin-top: 10rpx;
}
.topic-img image {
	width: 240rpx;
	height: 180rpx;
	border-radius: 20rpx;
}
.topic-footer {
	margin-top: 10rpx;
	font-size: 26rpx;
	color: #9e9e9e;
}
.topic-footer text{
	margin-left: 20rpx;
}

